+			const termMatches = (text.match(termRegex) || []).length
+			const variantMatches = variantRegexes.reduce((sum, regex) => sum + (text.match(regex) || []).length, 0)
+
+			if (termMatches > 0 && variantMatches > 0) {
+				issues.push({
