+
+	if (!fs.existsSync(filePath)) {
+		console.error(`âŒ File not found: ${filePath}`)
+		return
+	}
+
+	// Process the file
+	const changes = processFile(filePath)
+
+	console.log(`\nðŸ“Š Results: ${changes} changes made`)
+}
+
+/**
+ * Main execution
+ */
+function main() {
+	console.log("ðŸ”§ Targeted Documentation Fix Script")
+	console.log("====================================")
+
+	if (DRY_RUN) {
+		console.log("ðŸ” Running in DRY RUN mode - no files will be modified")
+	}
+
+	const args = process.argv.slice(2)
+	const testFile = args.find((arg) => arg.endsWith(".md"))
+
+	if (testFile) {
+		// Test mode - single file
+		testOnFile(testFile)
+	} else {
+		// Full mode - all files
+		console.log(`ðŸ“ Processing directory: ${DOCS_DIR}`)
+		const totalChanges = processDirectory(DOCS_DIR)
+
+		// Print statistics
+		console.log("\nðŸ“Š Targeted Fix Statistics")
+		console.log("==========================")
